<div class="row">
  <div class="col s6 offset-s3">
    <h4>Sign up</h4>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-field">
        <%= f.text_field :username, autofocus: true, :placeholder => "Full name" %>
      </div>

      <div class="input-field">
        <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
      </div>

      <div class="input-field">
        <%= f.text_field :phone_number, autofocus: true , :placeholder => "Phone number"%>
      </div>
      <div class="input-field">
        <%= f.text_area :description, rows: 5, cols: 25 , :placeholder => "Tell us about Yourself"%>
      </div>

      <div class="input-field">
        <% if @minimum_password_length %>

        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirm Password" %>
      </div>
      <button class="btn waves-effect waves-light" type="sign up" name="action">Submit
        <i class="material-icons right">sign up</i>
      </button>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col s12">
      <%=image_tag @trip.image.url(:medium) %>
    </div>
    <h3 class="trip-name"><%= @trip.name %></h3>
  </div>
</div
<p class=""flow-text"><%= @trip.description %></p>
<hr>
   <div class="row">
    <h4 class="info">Trip Information</h4>
    <div class="col s4 ">
      <p><%= @trip.location %></p>

      <p><%= @trip.duration %><%= material_icon.time  %></p>

      <p><%= @trip.price_per_participant %></p>

      <p><%= @trip.languages %></p>

      <p>
        <%= @trip.group_size %>
      </p>

      <p><%= @trip.transportation %></p>
    </div>
    <div class="col s4 flow-text">
      <p><%= @trip.includes %></p>

      <p><%= @trip.exclude %></p>
    </div>
  </div>


<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
